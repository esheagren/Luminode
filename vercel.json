{
  "version": 2,
  "functions": {
    "api/index.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/checkWord.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/getVectorCoordinates.js": {
      "memory": 512,
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 